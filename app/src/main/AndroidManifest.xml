<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robot.pocket_chef">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Recipes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StepDescription"
            android:parentActivityName=".Recipes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robot.pocket_chef.Recipes"/>
        </activity>
        <activity
            android:name=".StepInstruction"
            android:parentActivityName=".StepInstruction">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.robot.pocket_chef.StepDescription"/>
        </activity>
    </application>

</manifest>